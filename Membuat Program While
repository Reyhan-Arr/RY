#include <iostream>
using namespace std;

int main()
{
	int i, n = 0, jumlah = 0;
	
	cout << "Masukan bilangan: ";
	cin >> i;
	jumlah = jumlah + i;
	if (i%2 == 0) {
		cout << i << " - ";
		i = i - 2;
	}
else {
	cout << i << " - ";
	i=i-1;
	}
	while (i>n){
	if (i%2 == 0){
		cout << i << " - ";
		jumlah = jumlah - i;
	}
	i--;
    }
	jumlah = jumlah -i;
	cout << i << " ";
	cout << " = " << jumlah ;
	
}
