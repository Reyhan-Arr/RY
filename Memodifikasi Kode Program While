#include <iostream>
using namespace std;

int main ()
{
 int i = 1, n, jumlah = 0;
 
 cout << "Masukan banyak nilai: ";
 cin >> n;
 cout << "Jumlah : ";

 /* pelurangan */
  	while (i < n)
	  {
  		cout << i*7 << " + ";
		  jumlah = jumlah + (i*7);
		  i++;  
  	}
 jumlah = jumlah + (i*7);
 cout << i*7 << " ";
 cout << " = " << jumlah << endl;
 cout << "Rerata : " << jumlah << " / " << n << " = "<< jumlah/n;
	
}
